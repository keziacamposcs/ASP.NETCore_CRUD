@page
@model CRUD.Pages.Clients.EditModel
@{
}

<br>

<h2>Edit Client</h2>

<!--Mensagem de erro-->
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-primary" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<!--Fim - Mensagem de erro-->



<form method="POST">
    <input type="hidden" name="id" value="@Model.clientInfo.id" />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nome:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nome" value="@Model.clientInfo.name" />
        </div>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.clientInfo.email" />
        </div>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="telefone" value="@Model.clientInfo.phone" />
        </div>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.clientInfo.address" />
        </div>
    </div>

    <!--Mensagem de sucesso-->
    @if (Model.successMessage.Length > 0)
    {
            <div class="row mb-3">
                <div class="col-sm-9">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.successMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                    </div>
                </div>
            </div>
    }
    <!--Fim - Mensagem de sucesso-->


    <div class="row mb-3">

        <div class="offset-sm-3 col-sm-4 d-grid">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>

        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancelar</a>
        </div>

    </div>

</form>
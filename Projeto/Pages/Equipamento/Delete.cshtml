@using System.Data.SqlClient;
@model Projeto.Pages.Equipamento.DeleteModel
@{
    try
    {
        String id = Request.Query["id"];

        string conexao = "Data Source=localhost;Initial Catalog=CRUD;Integrated Security=True";
        using (SqlConnection connection = new SqlConnection(conexao))
        {
            connection.Open();

            String sql = "DELETE FROM equipamento WHERE id=@id";
            using (SqlCommand command = new SqlCommand(sql, connection))
            {
                command.Parameters.AddWithValue("@id", id);
                command.ExecuteNonQuery();
            }

        }
    }
    catch (Exception ex)
    {

    }

    Response.Redirect("/Equipamento/Index");
}


